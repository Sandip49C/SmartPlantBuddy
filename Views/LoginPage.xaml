<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SmartPlantBuddy.Views.LoginPage">
    <VerticalStackLayout Padding="30" Spacing="20">
        <Label Text="Log in" FontSize="32" HorizontalOptions="Center" />
        <Entry Placeholder="Email" Text="{Binding Email}" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" />
        <Button Text="Login" Command="{Binding LoginCommand}" BackgroundColor="Black" TextColor="White" />
        <Label Text="Demo: test@plant.com / 123456" FontSize="12" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
